									<ul class="rating-summary d-flex">
										{{#times stars}}
										<li class="on"><i class="fas fa-star"></i></li>
										{{/times}}
										{{#times emptystars}}
										<li><i class="fa fa-star-o"></i></li>
										{{/times}}
									</ul>
								</div>
						<!-- price -->
								<div class="price-box">
									<span>PHP {{price}}</span>
								</div>
						<!-- description -->
								<div class="product__overview">
									<p>{{description}}</p>
								</div>
								<div class="box-tocart d-flex">
						<!-- Qunatity -->
									<span>Qty</span>
									<input id="qty" class="input-text qty" name="qty" min="1" value="1" title="Qty" type="number">
						<!-- Add to cart -->
									<div class="addtocart__actions">
										<a href="../../addCart/{{id}}"><button class="tocart" style="border: none;" title="Add to Cart">Add to Cart</button></a>
									</div>
									</form>
							</div>
						</div>
					</div>
				</div>
